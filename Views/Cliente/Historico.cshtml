@model PontoDigital.ViewModels.HistoricoViewModel
@{
    ViewData["Title"] = "Registro - PontoDigital";
    ViewData["H2"] = "Histórico de registros";
}
<header>
    <hgroup>
        <h1>PontoDigital</h1>
    </hgroup>
</header>

<main>
    <h2>@ViewData["H2"]</h2>
    <h3>Seu histórico:</h3>
    <table>
        <thead>
            <tr>
                <th>Data</th>
                <th>Plano</th>
                <th>Preço</th>
            </tr>
        </thead>
        <tbody>
            @foreach( var Registro in Model.Registro ) {
                <tr>
                    <td>@Registro.DataNascimento</td>
                    <td>@Registro.Plano.Nome</td>
                    <td>@Registro.PrecoTotal</td>
                </tr>
            }
        </tbody>
    </table>

</main>